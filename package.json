{
  "name": "wesl-site",
  "type": "module",
  "dependencies": {
    "@weborigami/async-tree": "0.6.11",
    "@weborigami/origami": "0.6.11",
    "@weborigami/pagefind": "0.0.15",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.3",
    "marked-footnote": "^1.4.0",
    "marked-gfm-heading-id": "^4.1.3",
    "marked-highlight": "^2.2.3",
    "marked-smartypants": "^1.1.11",
    "wesl-rs-wasm": "https://github.com/mighdoll/big-files/raw/main/wesl-rs-wasm-0.3.2.tgz",
    "wgsl-edit": "^0.0.13",
    "wgsl-play": "^0.0.29"
  },
  "scripts": {
    "build": "run-s build:packages build:site",
    "build:site": "ori copy src/site.ori, clear files:build",
    "build:packages": "pnpm -r --if-present build",
    "dev": "run-s start",
    "deploy:site": "run-s build pages:deploy",
    "pages:deploy": "wrangler pages deploy --project-name wesl-lang build",
    "start": "ori serve watch ., =debug src/site.ori",
    "typecheck": "tsgo --noEmit",
    "preview": "run-s build serve",
    "serve": "serve build"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260228.1",
    "npm-run-all": "^4.1.5",
    "serve": "^14.2.5",
    "wrangler": "^4.69.0"
  }
}
